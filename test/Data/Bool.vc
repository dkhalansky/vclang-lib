\import Data.Unit
\import Data.Empty

\data Bool | true | false

\function
True (b : Bool) : \Prop
    | true => Unit
    | false => Empty

\function
not (b : Bool) : Bool
    | true => false
    | false => true

\function
if {A : \Type} (b : Bool) (then else : A) : A => \elim b
    | true => then
    | false => else

\function
xor (x y : Bool) : Bool => if x (not y) y

\function
and (x y : Bool) : Bool => if x y false

\function
or (x y : Bool) : Bool => if x true y
